<!--Settings-->
<div class="settings">
    <h1>Settings</h1>

<!--Change password form-->
<form asp-controller="Teacher" asp-action="ChangePassword" method="post" >
    <div>
        <p class="explanation">Change your password</p>
    </div> 
    <div>
        <input type="password" name="oldPassword" placeholder="Old Password" class="inpt"/>
        <input type="password" name="newPassword"  placeholder="New Password" class="inpt"/> 
        <input type="password" name="newPassword1"  placeholder="Confirm New Password" class="inpt"/> 
        <input type="hidden" name="professorName" value="@ViewBag.Username" />
        <input type="submit" class="submit"/>
    </div>
</form>


<!--Change phone number form-->
<form asp-controller="Teacher" asp-action="ChangePhone" method="post" >
    <div>
        <p class="explanation">Change your phone number</p>
    </div> 
    <div>
        <input type="tel" pattern="[0-9]{10}" name="phone" placeholder="New Phone Number" class="inpt"/> <br />
        <input type="hidden" name="professorName" value="@ViewBag.Username" />
        <input type="submit" class="submit"/>
    </div>
</form>
</div>



<div class="thesis_image">

<!--Reports Info-->

<div class="reports_info">
    <h1>Reports</h1>
    <div class="buttons">
        <a href="javascript:void(0);" class="icon" >
            <i class="fa fa-search"></i>    
        </a>
        <a class="link" asp-controller="Teacher" asp-action="GradeList" asp-route-username="@ViewBag.Username">click here to see the grades of your students</a>
